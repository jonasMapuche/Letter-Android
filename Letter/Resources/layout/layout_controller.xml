<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"


    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinator_controller"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar_controller"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_controller"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/background"
            app:titleTextColor="@color/fab"
            app:popupTheme="@style/AppTheme.PopupOverlay"></androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <include
        android:id="@+id/include_controller"
        layout="@layout/layout_navigation" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floating_left"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_weight="1"
        android:clickable="true"
        android:layout_gravity="bottom|start"
        android:layout_marginBottom="48dp"
        android:layout_marginLeft="28dp"
        app:srcCompat="@drawable/ic_left" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floating_down"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_weight="1"
        android:clickable="true"
        android:layout_gravity="bottom|start"
        android:layout_marginBottom="18dp"
        android:layout_marginLeft="80dp"
        app:srcCompat="@drawable/ic_down" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floating_up"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_weight="1"
        android:clickable="true"
        android:layout_gravity="bottom|start"
        android:layout_marginBottom="78dp"
        android:layout_marginLeft="80dp"
        app:srcCompat="@drawable/ic_up" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floating_right"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_weight="1"
        android:clickable="true"
        android:layout_gravity="bottom|start"
        android:layout_marginBottom="48dp"
        android:layout_marginLeft="132dp"
        app:srcCompat="@drawable/ic_right" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floating_plus"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_weight="1"
        android:clickable="true"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/floating_plus"
        app:srcCompat="@drawable/ic_add" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>